<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jhosely.hubermar.Principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/empresa"
                android:layout_width="134dp"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:text="HuberMar"
                android:textSize="22dp"
                android:textColor="@color/colorWhite" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp"
                    android:gravity="end" />
                <TextView
                    android:id="@+id/perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:paddingRight="10dp"
                    android:textSize="14dp"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:gravity="end" />
            </LinearLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informes KPI"
            android:textAlignment="center"
            android:background="@color/colorBlueOscure"
            android:textColor="@color/colorNegro"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/flechaabajo"
            android:drawablePadding="8dp"
            android:id="@+id/basicos"
            android:text="Párametros Basicos "
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/flechaabajo"
            android:drawablePadding="8dp"
            android:id="@+id/espesifica"
            android:text="Información Especifica"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/flechaabajo"
            android:drawablePadding="8dp"
            android:id="@+id/filtro"
            android:text="Filtro para el Informe"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/colorRosa">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Aperturaini"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="Apertura Ini"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/Aperturafin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:hint="Apertira Fin"
                    android:ems="10"
                    android:inputType="date" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/levanteIni"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="Lavante ini"
                    android:inputType="date" />

                <EditText
                    android:id="@+id/levanteFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:hint="Levante Fin"
                    android:ems="10"
                    android:inputType="date" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Regimen"
                    android:layout_marginRight="115dp"/>

                <Spinner
                    android:id="@+id/regimen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordespinnner"
                    android:entries="@array/regimen"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado   "
                    android:layout_marginRight="115dp"/>

                <Spinner
                    android:id="@+id/estado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordespinnner"
                    android:entries="@array/estado"/>

            </LinearLayout>
            <Button
                android:id="@+id/listo3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/boton_redondo"
                android:textColor="@color/colorWhite"
                android:elevation="10dp"
                android:text="Listo" />



        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/flechaabajo"
            android:drawablePadding="8dp"
            android:id="@+id/generar"
            android:text="Generar El informe"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

</RelativeLayout>