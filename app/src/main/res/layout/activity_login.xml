<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondosimecom"
    tools:context="com.example.jhosely.hubermar.LoginActivity">

    <EditText
        android:id="@+id/usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/clave"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center" />

    <EditText
        android:id="@+id/clave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aceptar"
        android:layout_alignLeft="@+id/usuario"
        android:layout_alignStart="@+id/usuario"

        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPassword"
        android:textAlignment="center" />

    <Button
        android:id="@+id/aceptar"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_above="@+id/loading"
        android:layout_alignEnd="@+id/clave"
        android:layout_alignRight="@+id/clave"
        android:layout_marginBottom="52dp"
        android:background="@drawable/boton_redondo"
        android:text="Ingresar"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/registrer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="Registrer" />

    <ProgressBar
        android:id="@+id/loading"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:paddingRight="40dp"
        android:paddingLeft="40dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/registrer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
