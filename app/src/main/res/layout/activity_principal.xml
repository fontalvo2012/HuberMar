<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jhosely.hubermar.Principal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/empresa"
                android:layout_width="134dp"
                android:layout_height="50dp"
                android:paddingLeft="20dp"
                android:text="HuberMar"
                android:textSize="22dp"
                android:textColor="@color/colorWhite" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:paddingRight="10dp"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="13dp"
                    android:gravity="end" />
                <TextView
                    android:id="@+id/perfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:paddingRight="10dp"
                    android:textSize="14dp"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:gravity="end" />
            </LinearLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MENU PRINCIPAL"
            android:textAlignment="center"
            android:background="@color/colorBlueOscure"
            android:textColor="@color/colorNegro"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/inf"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_black_18dp"
            android:drawablePadding="8dp"
            android:id="@+id/generarInf"
            android:text="Generador De Informes "
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lock"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_black_18dp"
            android:drawablePadding="8dp"
            android:id="@+id/configuracion"
            android:text="Configuracion De Usuario "
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/tecnico"
            android:drawableRight="@drawable/baseline_keyboard_arrow_right_black_18dp"
            android:drawablePadding="8dp"
            android:id="@+id/soporte"
            android:text="Soporte Tecnico "
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

</RelativeLayout>
